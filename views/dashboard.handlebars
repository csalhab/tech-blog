{{#if posts.length}}
  {{#each posts as |post|}}
    <div class="posts-container">
      <div class="posts-title-container">
        <div class="posts-title">{{title}}</div>
        <div class="posts-title-byline">Posted by
          {{user.username}}
          on
          {{formatDate createdAt}}</div>
      </div>
      <div class="posts-content">{{content}}</div>
      <div class="posts-content posts-edit-btn">
        <a href="/dashboard/editPost/">
          <button
            type="button"
            class="btn btn-dark btn-lg"
            id="{{id}}"
          >Edit</button>
        </a>
      </div>
    </div>
  {{/each}}
{{else}}
  <div>No Posts!</div>
{{/if}}
<div>
  <a href="/dashboard/newPost/"><button
      type="button"
      class="btn btn-dark btn-lg"
    >+ New Post</button></a>
</div>